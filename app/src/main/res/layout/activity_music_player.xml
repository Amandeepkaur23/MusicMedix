<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlayerActivity"
    android:background="#A9CFED"
    android:id="@+id/dec_anixety">

    <TextView
        android:id="@+id/txt_play_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Playing Now"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_music"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/img_music"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_play_music"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/txt_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_music"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Music Name"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txt_singer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Singer Name"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_music_name"
        />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_singer_name"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:thumbTint="@color/black" />

    <TextView
        android:id="@+id/txt_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seek_bar"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/txt_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seek_bar"
        android:text="00:00"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/linear_for_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_end_time"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_shuffle_gray" />

        <ImageView
            android:id="@+id/ic_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_arrow_back" />

        <ImageView
            android:id="@+id/ic_play_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_play_circle"
            tools:ignore="InvalidId" />

        <ImageView
            android:id="@+id/ic_arrow_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_arrow_forward" />

        <ImageView
            android:id="@+id/ic_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_repeat_gray" />

    </LinearLayout>

    <Button
        android:id="@+id/continue_music_preference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_for_icon"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/roundbutton"
        android:text="User Preference Music"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>