<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlayerActivity"
    android:background="#A9CFED"
    tools:ignore="HardcodedText"
    >

    <TextView
        android:id="@+id/txt_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Playing Now"
        android:inputType="text"
        android:textColor="#333232"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_music"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/txt_play"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/img_music"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/txt_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_music"
        android:layout_centerHorizontal="true"
        android:gravity = "center"
        android:layout_marginTop="30dp"
        android:text="Music Name"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_singer_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/txt_music_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="0sp" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_singer_name"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:thumbTint="@color/black" />

        <TextView
            android:id="@+id/txt_start_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seek_bar"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seek_bar"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="8dp"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/linear_for_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_end_time"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_shuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/ic_shuffle" />

            <ImageView
                android:id="@+id/ic_arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/ic_arrow_back" />

            <ImageView
                android:id="@+id/ic_play_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_play_circle"
                tools:ignore="InvalidId" />

            <ImageView
                android:id="@+id/ic_arrow_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/ic_arrow_forward" />

            <ImageView
                android:id="@+id/ic_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_repeat" />
        </LinearLayout>
</RelativeLayout>